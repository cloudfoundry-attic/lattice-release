{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "component_to_install": "collocated"
    },

    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-west-1",
            "source_ami": "ami-696e652c",
            "instance_type": "t1.micro",
            "ssh_username": "ubuntu",
            "ami_name": "lattice-{{user `component_to_install`}}-{{isotime \"20060102.1504\"}}"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "source": "lattice.tgz",
            "destination": "~/lattice.tgz"
        },
        {
            "type": "shell",
            "script": "install_from_tar",
            "execute_command": "sudo {{.Path}} {{user `component_to_install`}} ~/lattice.tgz"
        }
    ]
}
